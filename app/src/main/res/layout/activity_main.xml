<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#d1d7f5"

    tools:context="com.example.marzia.everydaycostapp.MainActivity">
   <!-- android:background="@drawable/backgroundexpense"-->



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:padding="20dp"
        android:background="#f5e2e2"
        android:alpha="0.9"
        >

        <EditText
            android:id="@+id/date_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:inputType="date"
            android:hint="dd/mm/yy"/>
        <EditText
            android:id="@+id/transport_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_marginBottom="10dp"
            android:hint="Transport Cost"/>
        <EditText
            android:id="@+id/food_cost_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:inputType="number"
            android:hint="Food Cost"/>
        <EditText
            android:id="@+id/other_cost_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:inputType="number"
            android:hint="Other cost"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/total_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Total"
                android:background="#4d65ae"
                android:layout_margin="5dp"
                android:textAllCaps="false"/>
                <!--android:theme="@style/MyButton"-->

            <TextView
                android:id="@+id/total_show_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="Total Cost"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="10dp"
                android:textColor="#000"
                android:textSize="30dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:padding="5dp">


               <EditText
                   android:id="@+id/salary_edt"
                   android:layout_width="wrap_content"
                   android:layout_height="0dp"
                   android:layout_weight="1"
                   android:ems="10"
                   android:padding="2dp"
                   android:layout_margin="5dp"
                   android:inputType="textPersonName"
                   android:hint="Your Salary" />


            <Button
                android:id="@+id/add_salary_btn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="2dp"
                android:layout_margin="5dp"
                android:background="#010510"
                android:textColor="#FFFF"
                android:text="Add Salary" />


            <Button
                android:id="@+id/add_record_btn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="2dp"
                android:layout_margin="5dp"
                android:background="#071748"
                android:textColor="#FFFF"
                android:text="Add Record"
                android:textAllCaps="false"/>


            <Button
                android:id="@+id/show_record_btn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"

                android:padding="2dp"
                android:layout_margin="5dp"

                android:background="#000410"
                android:textColor="#FFFF"
                android:text="Show Record"
                android:textAllCaps="false"/>



        </LinearLayout>


    </LinearLayout>




</ScrollView>
